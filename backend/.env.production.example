# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://expense_app:secure-password@db-host:5432/expense_tracker
DB_AUTO_SYNC=false

# CORS Configuration
# Comma-separated list of HTTPS origins allowed to call the API
CORS_ORIGINS=https://app.example.com
FRONTEND_URL=https://app.example.com

# JWT Configuration
JWT_SECRET=replace-with-strong-secret
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret

# Logging / Monitoring
LOG_LEVEL=info
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2
NLP_LOGGING_ENABLED=false
